<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
      <i class="fas fa-plus"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Bank Name</th>
            <th>Rekening Number</th>
            <th>Name</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% bank.forEach((data, i) => { %>
            <tr>
              <td>
                <%= i + 1 %>
              </td>
              <td>
                <%= data.nameBank %>
              </td>
              <td>
                <%= data.nomorRekening %>
              </td>
              <td>
                <%= data.name %>
              </td>
              <td class="d-flex justify-content-center">
                <img src="http://localhost:3000/<%= data.imageUrl %>" alt="<%= data.nameBank %>">
              </td>
              <td>
                <form class="d-flex justify-content-center align-items-center" action="/admin/bank/<%= data._id %>?_method=DELETE" method="POST">
                  <a href="javascript:void()" type="button" class="btn btn-success btn-circle btn-sm button-update" data-id="<%= data._id %>" data-name="<%= data.name %>" data-namebank="<%= data.nameBank %>" data-nomorrekening="<%= data.nomorRekening %>"> <i class="fas fa-edit"></i> </a>
                  <button type="submit" href="" class="btn btn-danger btn-circle btn-sm ml-2"> <i
                    class="fas fa-trash"></i>
                </button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>