<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-4">
    <a href="/admin/booking" class="btn btn-info">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img class="mt-2" src="https://admin-vaycation.herokuapp.com/<%= booking.payments.proofPayment %> " alt="Image Category" style="width: 100%; display: block;">
        <hr>
        <div class="d-flex mt-3">
          <% if (booking.payments.status === 'Proses') { %>
            <form class="d-flex justify-content-center align-items-center" action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="POST">
              <button type="submit" href="" class="btn btn-success btn-sm ml-2">
              Confirmation
              <i class="fas fa-check"></i>
            </button>
            </form>
            <form class="d-flex justify-content-center align-items-center" action="/admin/booking/<%= booking.id %>/reject?_method=PUT" method="POST">
              <button type="submit" href="" class="btn btn-danger btn-sm ml-2">
              Reject
              <i class="fas fa-times"></i>
            </button>
            </form>
            <% } %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Member Name</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %>
                    <%= booking.memberId.lastName %>
                </td>
                <td>
                  $
                  <%= booking.total %>
                </td>
                <td>
                  <%= booking.payments.bankFrom %>
                </td>
                <td>
                  <%= booking.itemId.title %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>